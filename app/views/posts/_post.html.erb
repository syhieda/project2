<div id="<%= dom_id post %>">
  <h2>
    <%= post.title %>
  </h2>

  <h4>
    <%= post.content %>
  </h4>

  <p>
    <%= image_tag(post.image.url, alt: 'Image', class: 'img-fluid') if post.image? %>
  </p>

    <p>
      <%= post.user.email if post.user.email %>
    </p>

    <p>
      <%= post.created_at %>
    </p>
</div>
